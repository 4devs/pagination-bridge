<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_pagination.paginator.class">FDevs\Pagination\Paginator</parameter>
        <parameter key="f_devs_pagination.extension.array_type.count.class">FDevs\Pagination\Extension\ArrayType\CountExtension</parameter>
        <parameter key="f_devs_pagination.extension.array_type.limit.class">FDevs\Pagination\Extension\ArrayType\LimitExtension</parameter>
        <parameter key="f_devs_pagination.extension.array_type.offset.class">FDevs\Pagination\Extension\ArrayType\OffsetExtension</parameter>
        <parameter key="f_devs_pagination.extension.array_type.page.class">FDevs\Pagination\Extension\ArrayType\PageExtension</parameter>
        <parameter key="f_devs_pagination.extension.doctrine.mongodb.limit.class">FDevs\Pagination\Extension\Doctrine\MongoDB\LimitExtension</parameter>
        <parameter key="f_devs_pagination.extension.doctrine.mongodb.offset.class">FDevs\Pagination\Extension\Doctrine\MongoDB\OffsetExtension</parameter>
        <parameter key="f_devs_pagination.extension.doctrine.mongodb.page.class">FDevs\Pagination\Extension\Doctrine\MongoDB\PageExtension</parameter>
        <parameter key="f_devs_pagination.type.array_type.class">FDevs\Pagination\Type\ArrayType</parameter>
        <parameter key="f_devs_pagination.type.doctrine.mongodb.query_builder.class">FDevs\Pagination\Type\Doctrine\MongoDB\QueryBuilderType</parameter>
        <parameter key="f_devs_pagination.type.doctrine.mongodb.query.class">FDevs\Pagination\Type\Doctrine\MongoDB\QueryType</parameter>
    </parameters>

    <services>

        <service id="f_devs_pagination.paginator" class="%f_devs_pagination.paginator.class%"/>

        <!--extension-->
        <service id="f_devs_pagination.extension.array_type.count" class="%f_devs_pagination.extension.array_type.count.class%">
            <tag name="f_devs_pagination.extension" type="%f_devs_pagination.type.array_type.class%" priority="0"/>
        </service>

        <service id="f_devs_pagination.extension.array_type.page" class="%f_devs_pagination.extension.array_type.page.class%">
            <tag name="f_devs_pagination.extension" type="%f_devs_pagination.type.array_type.class%" priority="1"/>
        </service>

        <service id="f_devs_pagination.extension.doctrine.mongodb.page" class="%f_devs_pagination.extension.doctrine.mongodb.page.class%">
            <tag name="f_devs_pagination.extension" type="%f_devs_pagination.type.doctrine.mongodb.query.class%" priority="1"/>
            <tag name="f_devs_pagination.extension" type="%f_devs_pagination.type.doctrine.mongodb.query_builder.class%" priority="1"/>
        </service>

        <!--type-->
        <service id="f_devs_pagination.type.array_type" class="%f_devs_pagination.type.array_type.class%">
            <tag name="f_devs_pagination.type"/>
        </service>

        <service id="f_devs_pagination.type.doctrine.mongodb.query_builder" class="%f_devs_pagination.type.doctrine.mongodb.query_builder.class%">
            <tag name="f_devs_pagination.type"/>
        </service>

        <service id="f_devs_pagination.type.doctrine.mongodb.query" class="%f_devs_pagination.type.doctrine.mongodb.query.class%">
            <tag name="f_devs_pagination.type"/>
        </service>

    </services>

</container>
